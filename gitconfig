[alias]
  co = checkout
  empty = commit --allow-empty -m
  st = status
  glog = log --pretty='format:%d %Cgreen%h%Creset %an - %s' --graph
  clog = log --pretty='- [x] %h %s'
  slog = log --pretty='- %h %s (%an)'
[branch]
  autosetuprebase = always
  sort = -committerdate
[column]
  ui = auto
[commit]
  gpgsign = true
[core]
  excludesfile = ~/.gitignore
  pager = /opt/homebrew/opt/git/share/git-core/contrib/diff-highlight/diff-highlight | less
  trustctime = false
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
[fetch]
  all = true
  prune = true
  pruneTags = true
[gpg]
  program = /opt/homebrew/bin/gpg
[help]
  autocorrect = prompt
[include]
  path = ~/.gitconfig.local
[init]
  defaultBranch = main
[merge]
  ff = only
[push]
  autoSetupRemote = true
  followTags = true
[rebase]
  autosquash = true
[rerere]
  autoupdate = true
  enabled = true
[tag]
  sort = version:refname
