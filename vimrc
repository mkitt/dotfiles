set autoindent
set clipboard=unnamed
set mouse=a
set nobackup
set noswapfile
set nowrap
set nowritebackup
set number
set splitright splitbelow
set title
let g:netrw_liststyle=3

noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l
noremap <silent><leader>\ :nohlsearch<CR>

colorscheme delek
